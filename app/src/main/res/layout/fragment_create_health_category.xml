<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.CreateHealthCategoryFragment">


    <!-- ENTER TITLE -->
    <TextView
        android:id="@+id/questionEnterTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question Label"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/questionEnterTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hint"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionEnterTitleLabel"
        android:visibility="invisible"/>


    <!-- ENTER DESCRIPTION -->
    <TextView
        android:id="@+id/questionEnterDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question Label"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/questionDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionEnterDescriptionLabel"
        android:visibility="invisible"/>


    <!-- ENTER WEIGHT -->
    <TextView
        android:id="@+id/questionEnterWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Weight:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/questionEnterWeightEditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionEnterWeightLabel"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/questionEnterHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Height:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionEnterWeightEditText"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/questionEnterHeightFeetEditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:ems="30"
        android:hint="Feet"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/questionEnterHeightInchesEditText"
        app:layout_constraintTop_toBottomOf="@+id/questionEnterHeightLabel"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/questionEnterHeightInchesEditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:ems="30"
        android:hint="Inches"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/questionEnterHeightFeetEditText"
        app:layout_constraintTop_toBottomOf="@+id/questionEnterHeightLabel"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/questionContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Continue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>