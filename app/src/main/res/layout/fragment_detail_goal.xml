<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.HabitDetailFragment"
    android:background="@color/cardview_dark_background">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondaryColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goalDetailGoalIdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Id"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goalDetailGoalNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goalDetailCategoryView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="categoryName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goalDetailStartDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="startDate"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goalDetailGoalTargetDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ifTimeBased"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goalDetailIsGoalRecurringView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="habitGoalTimeInMillis"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goalDetailIsGoalTimeBasedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="timeScheduledInMillis"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goalDetailGoalGoalTimeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TargetDate"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>